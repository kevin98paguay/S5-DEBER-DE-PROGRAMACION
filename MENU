            elif opc4 == "5":
                cad = Cadena("")
                cad.cadenaLista()
            elif opc4 == "6":
                cad = Cadena("")
                cad.insertarOcurrencia()
            elif opc4 == "7":
                cad = Cadena("")
                cad.eliminarOcurrencia()
            elif opc4 == "8":
                cad = Cadena("")
                cad.retornaValor()
            elif opc4 == "9":
                cad = Cadena("")
