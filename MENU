            elif opc4 == "10":
                print("Regresando al menú principal....")
                salir = True
            else:
                print("Ingreso mal la opcion")
                opc4 = menu4.menu()
        salir = False
    elif opc == "5":
        salir = True
    else:
        print("Error de ingreso, por favor escoja bien una de las opciones")
